@import "./../components/common/bottomLoadMore.wxss";
/** less **/
.item {
  width: 702rpx;
  height: 268rpx;
  background: #ffffff;
  box-shadow: 0rpx 12rpx 16rpx 0rpx rgba(0, 0, 0, 0.09);
  border-radius: 12rpx;
  margin: 24rpx 22rpx;
  position: relative;
}
.item image {
  width: 220rpx;
  height: 220rpx;
  background: #d8d8d8;
  border-radius: 12rpx;
  margin: 24rpx;
}
.item .item-title {
  width: 400rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 36rpx;
  margin-top: 55rpx;
}
.item .item-date,
.item .item-time {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #777;
  margin-top: 28rpx;
}
.item .item-btn {
  width: 134rpx;
  height: 56rpx;
  background: linear-gradient(180deg, #0099ff 0%, #00c9ff 100%);
  border-radius: 28rpx;
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
}
