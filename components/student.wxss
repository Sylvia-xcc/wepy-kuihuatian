/** less **/
page {
  height: 100%;
  background: #fcfbfb;
}
.container {
  background-color: #f5f5f9;
  justify-content: initial;
}
.form-box {
  width: 750rpx;
  background-color: #fff;
  margin-bottom: 300rpx;
  padding-bottom: 100rpx;
}
.row-wrap {
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  flex-direction: row;
  justify-content: space-between;
}
.row-wrap .label {
  color: #666;
}
.row-wrap .label-right {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
}
.row-wrap .label-right input {
  height: 100%;
  font-size: 28rpx;
  /* padding-right: 30rpx; */
  text-align: right;
}
.row-wrap .right-box {
  margin-right: 30rpx;
}
.addr-details {
  height: auto;
  width: 690rpx;
  padding: 30rpx 0rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
}
.addr-details textarea {
  box-sizing: border-box;
  width: 690rpx;
  min-height: 180rpx;
  overflow: scroll;
  color: #666;
}
.set-addr {
  width: 750rpx;
  height: 88rpx;
  background: #fff;
  margin-top: 30rpx;
  line-height: 88rpx;
  display: flex;
}
.set-addr .label-switch {
  width: 260rpx;
  color: #666;
  margin-left: 30rpx;
  font-size: 28rpx;
}
.set-addr switch {
  position: absolute;
  right: 20rpx;
}
picker {
  height: 100%;
  margin-right: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
picker text {
  margin-right: 10rpx;
  width: 100%;
  color: #666;
}
.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin-top: 30rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  background-color: #e64340;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
}
/* 设置switch 组件大小 */
.wx-switch-input {
  width: 82rpx !important;
  height: 40rpx !important;
}
/*关闭状态*/
.wx-switch-input::before {
  width: 80rpx !important;
  height: 36rpx !important;
}
/*开启状态*/
.wx-switch-input::after {
  width: 36rpx !important;
  height: 36rpx !important;
}
.jt {
  height: 20rpx;
  width: 24rpx;
}
.photo {
  width: 690rpx;
  height: 300rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.photo .pic-cont {
  margin-top: 20rpx;
  position: relative;
  width: 200rpx;
  height: 200rpx;
}
.photo .pic-cont .pic-img {
  width: 200rpx;
  height: 200rpx;
}
.photo .pic-cont .pic-del {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}
