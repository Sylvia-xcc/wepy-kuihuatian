/** less **/
.item {
  width: 702rpx;
  margin-bottom: 40rpx;
  margin-left: 24rpx;
  border-bottom: 2rpx solid #D8D8D8;
}
.item .item-head-img {
  width: 88rpx;
  height: 88rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.item .right {
  width: 594rpx;
  margin-bottom: 38rpx;
}
.item .right .item-name {
  font-size: 28rpx;
  color: #0050b2;
  margin-top: 2rpx;
  width: 594rpx;
  font-weight: bold;
}
.item .right .item-content {
  font-size: 28rpx;
  color: #4a4a4a;
  margin-top: 10rpx;
  width: 594rpx;
  line-height: 40rpx;
}
.item .right .item-content-fold {
  height: 80rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.item .right .item-content-btn {
  width: 100rpx;
  height: 44rpx;
  background: #fff;
  color: #0050B2;
  line-height: 44rpx;
  text-align: left;
  vertical-align: middle;
}
.item .right .item-wrapper {
  width: 600rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.item .right .item-wrapper image {
  width: 192rpx;
  height: 192rpx;
  margin-bottom: 8rpx;
  margin-right: 8rpx;
}
.item .right .item-time {
  justify-content: space-between;
  margin: 16rpx 0;
  color: #a0a0a0;
  font-size: 24rpx;
  position: relative;
}
.item .right .item-time .item-time-img {
  width: 64rpx;
  height: 32rpx;
}
.item .right .item-time .item-del {
  width: 100rpx;
  height: 32rpx;
  color: #0050B2;
  line-height: 32rpx;
  text-align: center;
  vertical-align: middle;
}
.item .right .item-caozuo {
  width: 250rpx;
  height: 56rpx;
  background: #303030;
  font-size: 12px;
  color: #fff;
  position: absolute;
  border-radius: 8rpx;
  overflow: hidden;
  right: 80rpx;
  top: -13rpx;
  display: none;
  transform: translateX(0);
  transition: all 0.4s ease;
  z-index: 999;
  opacity: 0;
}
.item .right .item-caozuo .dianzan,
.item .right .item-caozuo .pinglun {
  width: 34rpx;
  height: 34rpx;
  line-height: 50rpx;
  vertical-align: middle;
  text-align: center;
  font-size: 22rpx;
}
.item .right .item-caozuo .dianzan-txt,
.item .right .item-caozuo .pinglun-txt {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  vertical-align: middle;
  text-align: center;
  font-size: 22rpx;
  margin-left: 4rpx;
}
.item .right .active {
  display: block;
  transform: translateX(0);
  opacity: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.item .right .item-zan {
  width: 100%;
  padding-top: 12rpx;
  background: #ececec;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
}
.item .right .item-zan .item-zan-img {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
  position: absolute;
  top: 16rpx;
}
.item .right .item-zan .item-zan-txt {
  color: #0050b2;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  padding-right: 12rpx;
  text-indent: 35rpx;
  line-height: 34rpx;
}
.item .right .showbottom {
  border-bottom: 2rpx #d7d7d7 solid;
}
.item .right .item-comment {
  width: 100%;
  padding: 12rpx 0rpx;
  background: #ececec;
}
.item .right .item-comment .pinglun-one {
  font-size: 24rpx;
  color: #5a5a5a;
  margin-left: 10rpx;
  width: 574rpx;
  margin-bottom: 5rpx;
}
.item .right .item-comment .pinglun-one .pinglun-nickname {
  color: #0050b2;
}
.item .right .item-comment .pinglun-one-hover {
  background: #ccd6d8;
}
