.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  width: 750rpx;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999999;
}
.loading text {
  color: #666666;
  font: bold 24rpx "PingFang-SC-Regular";
}
.loading image {
  width: 400rpx;
  height: 300rpx;
}
