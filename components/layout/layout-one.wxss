/** less **/
.layout-container {
  width: 750rpx;
  margin: 30rpx auto;
  margin-bottom: 50rpx;
}
.layout-container .layout-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.layout-container .layout-title .title {
  height: 25rpx;
  margin-left: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: 10rpx;
}
.layout-container .layout-title .title .title-t1 {
  color: #333;
  font: bold 26rpx "PingFang-SC-Bold";
  height: 25rpx;
  line-height: 25rpx;
  letter-spacing: 3rpx;
  margin-right: 20rpx;
}
.layout-container .layout-title .title .title-t2 {
  color: #999;
  font: 20rpx "SanFranciscoDisplay-Regular";
  height: 25rpx;
}
.layout-container .layout-title .dian {
  width: 33rpx;
  height: 6rpx;
  margin-right: 24rpx;
}
.item-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12rpx 12rpx 0rpx 0rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-mask .item-mask-sk {
  width: 204rpx;
  height: 204rpx;
}
.item-mask .item-mask-over {
  width: 204rpx;
  height: 180rpx;
}
.content-one {
  width: 750rpx;
  margin-top: 20rpx;
}
.content-one .item {
  width: 750rpx;
  height: 220rpx;
  background: #ffffff;
  box-shadow: 8px 0px 16px 0px rgba(0, 0, 0, 0.06);
  position: relative;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.content-one .item .item-left {
  width: 180rpx;
  height: 180rpx;
  /* padding: 20rpx 24rpx; */
  /* background: greenyellow; */
  position: relative;
  margin-top: 20rpx;
  margin-left: 24rpx;
}
.content-one .item .item-left image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
}
.content-one .item .item-left .item-time {
  width: 180rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0rpx 0rpx 12rpx 12rpx;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 22rpx;
}
.content-one .item .item-left .item-time image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.content-one .item .item-left .item-time text {
  font-size: 16rpx;
  font-family: PingFangSC-Regular;
  color: #ffffff;
  white-space: nowrap;
  margin-left: 8rpx;
}
.content-one .item .item-right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 32rpx;
}
.content-one .item .item-right .item-name {
  font: bold 26rpx PingFangSC-Semibold;
  color: #383838;
  margin-top: 22rpx;
  width: 250rpx;
}
.content-one .item .item-right .item-desc {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  color: #999999;
  /* margin-top: 18rpx; */
  width: 350rpx;
  line-height: 22rpx;
  /* min-height: 22rpx; */
}
.content-one .item .item-right .item-price {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  color: #ff3b30;
  /* margin-top: 18rpx; */
}
.content-one .item .item-right .item-oldprice {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  color: #999999;
  text-decoration: line-through;
  margin-bottom: 18rpx;
}
.content-one .item .item-stock {
  min-width: 126rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.037);
  border-radius: 16rpx;
  position: absolute;
  right: 24rpx;
  top: 26rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  color: #474747;
  text-align: center;
  white-space: nowrap;
  padding: 0 4rpx;
  line-height: 32rpx;
  vertical-align: middle;
}
.content-one .item .item-btn {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: #828282;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content-one .x-right {
  width: 18rpx;
  height: 18rpx;
  margin-left: 5rpx;
}
