/** less **/
.content-two {
  width: 750rpx;
  margin-top: 10rpx;
  border-radius: 0rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.content-two .item {
  width: 338rpx;
  height: 530rpx;
  background: #ffffff;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(0, 0, 0, 0.06);
  border-radius: 12rpx;
  margin-left: 24rpx;
  margin-top: 20rpx;
  position: relative;
}
.content-two .item .item-top {
  position: relative;
  width: 338rpx;
  height: 336rpx;
}
.content-two .item .item-top image {
  width: 338rpx;
  height: 336rpx;
  border-radius: 12rpx 12rpx 0rpx 0rpx;
}
.content-two .item .item-top .item-time {
  width: 338rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.3);
  /* border-radius: 0rpx 0rpx 12rpx 12rpx; */
  position: absolute;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.content-two .item .item-top .item-time image {
  width: 31rpx;
  height: 31rpx;
  margin-right: 20rpx;
}
.content-two .item .item-top .item-time text {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  color: #ffffff;
  white-space: nowrap;
}
.content-two .item .item-bottom {
  display: flex;
  flex-direction: column;
  margin-left: 8rpx;
  /* justify-content: space-around; */
}
.content-two .item .item-bottom .item-name {
  width: 310rpx;
  font: bold 26rpx "PingFangSC-Medium";
  color: #333333;
  margin-top: 14rpx;
  display: block;
}
.content-two .item .item-bottom .item-price {
  font: bold 36rpx "PingFangSC-Medium";
  color: #ff3b30;
  margin-top: 14rpx;
  display: block;
  margin-left: -5rpx;
}
.content-two .item .item-bottom .item-oldprice {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #979797;
  line-height: 20rpx;
  text-decoration: line-through;
  margin-top: 12rpx;
  display: block;
}
.content-two .item .item-bottom .item-stock {
  font: 22rpx "PingFangSC-Regular";
  color: #999999;
  margin-top: 8rpx;
  display: block;
}
.content-two .item .item-cart {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 32rpx;
  bottom: 30rpx;
}
