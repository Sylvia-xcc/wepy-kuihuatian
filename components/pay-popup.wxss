.modal {
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  flex-direction: column;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9998;
}
.modal .cont {
  position: absolute;
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: white;
  border-radius: 10rpx;
}
.modal .cont .title {
  font-size: 34rpx;
  color: black;
  text-align: center;
  margin-top: 30rpx;
}
.modal .cont .content {
  margin-top: 30rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-bottom: 40rpx;
  font-size: 30rpx;
  color: #888;
}
.modal .cont .content .pic-cont {
  width: 200rpx;
  height: 200rpx;
  background: #f3f3f3;
  margin: 20rpx 190rpx 40rpx 190rpx;
  position: relative;
}
.modal .cont .content .pic-cont .pic-img {
  width: 200rpx;
  height: 200rpx;
}
.modal .cont .content .pic-cont .pic-del {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}
.modal .cont .modal-btn-wrapper {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx solid rgba(7, 17, 27, 0.1);
  width: 100%;
}
.modal .cont .modal-btn-wrapper .cancel-btn,
.modal .cont .modal-btn-wrapper .confirm-btn {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  width: 50%;
}
.modal .cont .modal-btn-wrapper .cancel-btn {
  border-right: 1rpx solid rgba(7, 17, 27, 0.1);
}
